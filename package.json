{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint app --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e:dev": "start-server-and-test 'yarn dev' http://localhost:3000 'yarn cypress:open'",
    "e2e:run:dev": "start-server-and-test 'yarn dev' http://localhost:3000 'yarn cypress:run'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "postinstall": "husky install",
    "typecheck": "tsc -b",
    "setup": "prisma db seed"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "4.4.0",
    "@remix-run/node": "1.7.2",
    "@remix-run/react": "1.7.2",
    "@remix-run/vercel": "1.7.2",
    "@vercel/node": "2.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@remix-run/dev": "1.7.2",
    "@remix-run/eslint-config": "1.7.2",
    "@remix-run/serve": "1.7.2",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.2",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "cypress": "^10.9.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "7.0.4",
    "jsdom": "^20.0.1",
    "postcss": "^8.4.17",
    "prisma": "4.4.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.7.4",
    "vite-tsconfig-paths": "^3.5.1",
    "vitest": "^0.24.0"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
